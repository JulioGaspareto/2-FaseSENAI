-- 1. COUNT() — Contar linhas

-- Conta quantos produtos existem na tabela
SELECT COUNT(*) AS total_produtos
FROM produto;


-- 2. SUM() — Somar valores

-- Soma o estoque de todos os produtos
SELECT SUM(estoque) AS estoque_total
FROM produto;


-- 3. AVG() — Média dos valores

-- Calcula a média dos preços dos produtos
SELECT AVG(preco) AS media_precos
FROM produto;


-- 4. MIN() — Pega o menor valor

-- Encontra o menor preço entre os produtos
SELECT MIN(preco) AS menor_preco
FROM produto;


-- 5. MAX() — Pega o maior valor

-- Encontra o maior estoque
SELECT MAX(estoque) AS maior_estoque
FROM produto;

-- 6. DISTINCT — Remove valores repetidos


-- | id | produto_id | quantidade |
-- | -- | ---------- | ---------- |
-- | 1  | 1          | 10         |
-- | 2  | 1          | 2          |
-- | 3  | 3          | 5          |

-- Mostra quais produtos já foram pedidos (sem repetir)
SELECT DISTINCT produto_id
FROM pedido;


-- 7. COUNT(DISTINCT ...) — Conta valores únicos

-- Conta quantos produtos diferentes foram pedidos
SELECT COUNT(DISTINCT produto_id) AS produtos_unicos
FROM pedido;


-- Exemplo final juntando tudo

-- Estatísticas gerais da tabela produto
SELECT
    COUNT(*) AS total_produtos,            -- quantos produtos existem
    SUM(estoque) AS soma_estoque,          -- estoque total
    AVG(preco) AS preco_medio,             -- média dos preços
    MIN(preco) AS menor_preco,             -- menor preço
    MAX(preco) AS maior_preco              -- maior preço
FROM produto;
